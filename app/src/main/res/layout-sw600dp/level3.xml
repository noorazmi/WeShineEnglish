<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/memlevel3"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cardlay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/upperlay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/cmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/front" />

            <ImageView
                android:id="@+id/cardu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:src="@drawable/front" />

            <ImageView
                android:id="@+id/tcard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/light" />

            <ImageView
                android:id="@+id/tcard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/credb" />

            <ImageView
                android:id="@+id/tcard3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ctrafic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomlay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/lcard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cgolf" />

            <ImageView
                android:id="@+id/lcard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cblue" />

            <ImageView
                android:id="@+id/lcard3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/csun" />

            <ImageView
                android:id="@+id/lcard4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/csplate" />

            <ImageView
                android:id="@+id/lcard5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/plate" />
        </LinearLayout>
    </LinearLayout>
   <RelativeLayout 
        android:id="@+id/frmae"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content">
        <ImageView android:id="@+id/clock"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/clock1"/>

            <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#FF0F00"
            android:textSize="25sp" />

    </RelativeLayout>
    <RelativeLayout 
         android:id="@+id/textlay" 
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:visibility="invisible"
    android:gravity="center_vertical|center_horizontal">
    <ImageView 
              android:id="@+id/textimg"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/gameover"/>
</RelativeLayout>
</RelativeLayout>