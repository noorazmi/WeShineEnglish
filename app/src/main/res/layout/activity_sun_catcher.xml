<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sun_catcher_bg"
    android:orientation="vertical" >

    <!--
         <ImageView
        android:id="@+id/sunCatcher_sunImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/maze2_sun_top_margin" />
    -->

    <ImageView
        android:id="@+id/sunCatcher_lakeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginTop="@dimen/maze2_sun_top_margin" />

    <ImageView
        android:id="@+id/sunCatcher_birdImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginTop="@dimen/maze2_sun_top_margin" />

    <ImageView
        android:id="@+id/sunCatcher_batteryImageView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="top|right"
        android:src="@drawable/battery" />

    <TextView
        android:id="@+id/sunCatcher_circleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="25"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <AbsoluteLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/sunCatcher_sunImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/sunCatcher_raysImageView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/rays1" />

        <ImageView
            android:id="@+id/sunCatcher_golfCarImageView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/golf_car" />

        <ImageView
            android:id="@+id/sunCatcher_starsImageView"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/stars_animation_drawable"
            android:visibility="invisible" />
    </AbsoluteLayout>

    <LinearLayout
        android:id="@+id/sunCatcher_batteryFullLinearLayout" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/sunCatcher_batteryFullImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/batteryfull" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sunCatcher_gameOverLinearLayout" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gameover" />
    </LinearLayout>

</FrameLayout>