<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/matchbg2" >

   <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/stowerblank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/poleblank" />

    </RelativeLayout>
  
 <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/relativeLayout3" >

        <ImageView
            android:id="@+id/golf1blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/golf2blank" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sunlayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/relativeLayout2" >

        <ImageView
            android:id="@+id/sun1blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/sun2blank" />

        <ImageView
            android:id="@+id/boatblank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/vessalblank" />
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/leftlayout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_toRightOf="@+id/sunlayout" >

    <RelativeLayout
    android:id="@+id/dragrela"
    android:layout_width="100dp"
    android:layout_height="90dp"
    android:background="@drawable/border"
    android:gravity="center"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true" >

    <ImageView
        android:id="@+id/draglayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sun2" />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/towerlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/dragrela"
    android:layout_centerHorizontal="true"
    
    android:layout_marginTop="5dp" >

    <ImageView
        android:id="@+id/towerblank"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bouyblank" />
</RelativeLayout>

</RelativeLayout>
</RelativeLayout>